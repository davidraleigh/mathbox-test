extends layout

block content
  form(class="pure-form")
    fieldset
      legend A compact inline form
      input(type="email" placeholder="Email" style="cursor: auto; background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;" autocomplete="off")
      input(type="password" placeholder="Password" style="cursor: auto; background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;" autocomplete="off")
      label(for="default-remember")
        input(id="default-remember" type="checkbox").
        span Remember Me
      button(type="submit" class="pure-button pure-button-primary") Sign in
  div
    script(src="/javascripts/shapes.js")
